{
  "build": {
    "env": {
      "PNPM_VERSION": "9.1.3"
    }
  },
  "installCommand": "npm install -g pnpm@$PNPM_VERSION && pnpm install --registry",
  "buildCommand": "pnpm run build",
  "rewrites": [
    {"source": "/(.*)", "destination": "/"},
    {
      "source": "/api",
      "destination": "https://skin-node-production.up.railway.app/*"
    },
    {
      "source": "/ws",
      "destination": "ws://skin-node-production.up.railway.app/*"
    }
  ]
}
